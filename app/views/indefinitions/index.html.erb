<p id="notice"><%= notice %></p>

<h1>Indefinitions</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= @indefinitions.length %>
    <% @indefinitions.each do |indefinition| %>
      <tr>
        <td><%= indefinition.nom %></td>
        <td><%= indefinition.description %></td>
        <td><%= link_to 'Show', indefinition %></td>
        <td><%= link_to 'Edit', edit_indefinition_path(indefinition) %></td>
        <td><%= link_to 'Destroy', indefinition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Indefinition', new_indefinition_path %>
